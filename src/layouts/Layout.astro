---
import Head from '@/layouts/include/Head.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

type Props = {
	title: string;
	description: string;
	type?: string;
	pagePath: string;
	noindex?: Boolean;
};

const { title, description, type, pagePath, noindex } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<Head title={title} description={description} type={type} pagePath={pagePath} noindex={noindex}>
		<slot name="scripts" />
	</Head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
